<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<VBox fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml" alignment="center">
    <TextArea fx:id="mainTextArea" VBox.vgrow="ALWAYS" editable="false" />
    <TextField fx:id="textField" VBox.vgrow="ALWAYS" promptText="Введите Ваше сообщение..." onAction="#getUserMessage" />
    <Button text="Отправить" onAction="#getUserMessage"/>
</VBox>